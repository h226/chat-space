  .header グループを作成しました


  .info-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name User 
        %ul.__side-header__box__menu
          %li.__new-group


    .group-box
      .group1
        %p.group-name group1
        %p.latest-message hello
      .group2
        %p.group-name group2
        %p.latest-message hola
      .group3
        %p.group-name group3
        %p.latest-message sayonara


  .chat-space
